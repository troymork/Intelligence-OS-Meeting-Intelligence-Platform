{
  "name": "Intelligence OS Platform (Simple)",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [3000, 5000, 8000],
  "postCreateCommand": "echo 'Setup complete! Run: chmod +x scripts/*.sh && ./start-platform.sh'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-docker"
      ]
    }
  }
}